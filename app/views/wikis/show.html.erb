<h1><%= markdown_to_html @wiki.title %></h1>
<p><%= markdown_to_html @wiki.body %></p>
<% if policy(@wiki).edit? %>
    <%= link_to "Edit", edit_wiki_path(@wiki), class: "btn btn-success" %>
<% end %>
<%= link_to "Collaborators", wiki_collaborators_path(@wiki), class: "btn btn-success" %>
<% if current_user.admin? || (current_user.premium? && @wiki.user == current_user) %>
    <%= link_to "Delete", [@wiki], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?' } %>
<% end %>