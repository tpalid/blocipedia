<%= form_for @wiki do |f| %>

    <div class='form-group'>
        <%= f.label :title %></br>
        <%= f.text_field :title %>
    </div>
    <div class='form-group'>
        <%= f.label :body %></br>
        <%= f.text_area :body %>
    </div>
    
    <% if current_user.admin? || (current_user.premium? && (@wiki.user == current_user || @wiki.user == nil)) %>
        <div class="form-group">
            <%= f.label :private, class: 'checkbox' do %>
                <%= f.check_box :private %> Private?
            <% end %>
        </div>
    <% end %>
    
    <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
<% end %>

<% if @wiki.private? && (@wiki.user == current_user || current_user.admin? == true) %>
    <%= link_to "Edit Collaborators", wiki_collaborators_path(@wiki)%>
<% end %>