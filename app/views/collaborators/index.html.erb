<h3> <%= @wiki.title %> Collaborators </h3>
<% @collaborating_users.each do |user| %>
    <%= user.name %>: <%= user.email %>
    <% if @wiki.user == current_user %>
        <small><%= link_to "Delete", wiki_collaborator_path(@wiki.id, user.id),  method: :delete, data: {confirm: 'Are you sure you want to delete this collaborator?' } %></small>
    <% end %>
<% end %>
<h2> Add a Collaborator </h2>
<%= render "collaborators/form", locals: { wiki: @wiki, collaborator: @collaborator } %>